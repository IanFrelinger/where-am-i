{
  "name": "@where-am-i/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"esbuild src/local-server.ts --bundle --platform=node --target=node20 --outfile=dist/local-server.js\"",
    "build": "tsc",
    "start": "node dist/local-server.js",
    "test": "vitest",
    "lint": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "aws-lambda": "^1.0.7",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
